{
  "name": "prisma-server",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Johannes Birkenstock",
  "license": "MIT",
  "dependencies": {
    "@prisma/cli": "^2.0.0-beta.2",
    "@prisma/client": "^2.0.0-beta.2",
    "@types/bcrypt": "^3.0.0",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/uuid": "^7.0.2",
    "apollo-server-express": "^2.12.0",
    "bcrypt": "^3.0.8",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "graphql": "^14.6.0",
    "graphql-iso-date": "^3.6.1",
    "jsonwebtoken": "^8.5.1",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5",
    "uuid": "^3.4.0",
    "webpack": "^4.41.6"
  },
  "scripts": {
    "build": "webpack",
    "prisma:build": "yarn run prisma:introspect && yarn run prisma:generate",
    "prisma:migrate": "yarn run prisma:migrate:save && yarn run prisma:migrate:up && yarn run prisma:generate",
    "prisma:migrate:save": "npx prisma migrate save --experimental",
    "prisma:migrate:up": "npx prisma migrate up --experimental --verbose",
    "prisma:introspect": "npx prisma2 introspect",
    "prisma:introspect-cross": "cross-env PRISMA_MIGRATION_ENGINE_BINARY=D:/privateCode/ npx prisma2 introspect",
    "prisma:generate": "npx prisma2 generate",
    "dev": "cross-env NODE_ENV=development concurrently --kill-others-on-fail 'webpack --watch' yarn start:watch:delay",
    "start": "node ./dist/server.js",
    "start:watch": "npm-run-all --parallel start:watch:nodemon start:watch:webpack",
    "start:watch:nodemon": "nodemon --watch dist -e js,ts,graphql,json --exec yarn start",
    "start:watch:webpack": "webpack --watch",
    "start:watch:delay": "wait-on --delay 10000 ./dist/server.js && yarn start:watch",
    "generate-typedefs": "yarn create-schema && yarn create-types",
    "create-schema": "graphql get-schema",
    "create-types": "graphql-schema-typescript --namespace=GQL --global=true --typePrefix= generate-ts --output=src/__typedefs/graphqlTypes.d.ts src/__typedefs"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "apollo-server-types": "^0.2.10",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.0",
    "graphql-cli": "^3.0.14",
    "graphql-schema-typescript": "^1.3.2",
    "lodash": "^4.17.15",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2",
    "ts-loader": "^6.2.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.5.4",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  }
}
